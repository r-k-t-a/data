{
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "clean:lib": "rimraf store/lib && rimraf store-react/lib $$ rimraf **/tsconfig.build.tsbuildinfo",
    "bootstrap": "lerna bootstrap",
    "test": "CI=true lerna run test --stream",
    "start": "lerna run --parallel start",
    "prepare": "yarn run clean:lib && yarn typecheck && lerna run build",
    "build": "npm run prepare && lerna run --parallel build",
    "release": "yarn run build && lerna publish --contents lib --yes patch",
    "typecheck": "lerna run typecheck"
  },
  "devDependencies": {
    "@types/node": "^14.14.7",
    "lerna": "3.22.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "workspaces": [
    "demo",
    "patterns",
    "store",
    "store-react"
  ]
}
